.bs-component
  %table.table.table-striped.table-hover.table-bordered
    %thead
      %tr
        %th 体重
        %th BP1
        %th BP2
        %th BP3
        %th 結果
        %th F記録
        %th 大会名
      %tbody
        - @bps.each do |bp|
          %tr
            %td= bp.weight
            %td= bp.first
            %td= bp.second
            %td= bp.third
            %td= bp.result
            %td= bp.formula
            %td= link_to bp.championship.name, "championship/#{bp.championship_id}"