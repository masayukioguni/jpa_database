= form_for @lifter do |f|
  - if @lifter.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lifter.errors.count, "error")} prohibited this lifter from being saved:"
      %ul
        - @lifter.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :index
    = f.text_field :index
  .field
    = f.label :show
    = f.text_field :show
  .actions
    = f.submit 'Save'
